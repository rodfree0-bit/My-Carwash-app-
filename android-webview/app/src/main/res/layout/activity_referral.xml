<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Refer Friends"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- HERO CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_card"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Give $10, Get $10"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share your code with friends. They get $10 off their first wash, you get $10 credit!"
                android:textColor="#E2E8F0"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.4"/>
        </LinearLayout>

        <!-- REFERRAL CODE CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/glass_card"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Referral Code"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/code_background"
                android:padding="16dp">

                <TextView
                    android:id="@+id/referralCodeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="JOHN123ABC"
                    android:textColor="#60A5FA"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCopyCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copy"
                    android:textColor="#000000"
                    android:backgroundTint="#60A5FA"
                    app:cornerRadius="8dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:icon="@drawable/ic_copy"
                    app:iconTint="#000000"
                    android:stateListAnimator="@null"/>
            </LinearLayout>
        </LinearLayout>

        <!-- STATS CARDS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/glass_card"
                android:padding="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/totalReferrals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Referrals"
                    android:textColor="#94A3B8"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/glass_card"
                android:padding="16dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/totalRewards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textColor="#10B981"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Earned"
                    android:textColor="#94A3B8"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- SHARE BUTTONS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share via"
            android:textColor="#94A3B8"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShareWhatsApp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Share on WhatsApp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#25D366"
            app:cornerRadius="12dp"
            android:textStyle="bold"
            app:icon="@drawable/ic_whatsapp"
            app:iconTint="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:stateListAnimator="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShareSMS"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Share via SMS"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            app:cornerRadius="12dp"
            android:textStyle="bold"
            app:icon="@drawable/ic_sms"
            app:iconTint="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:stateListAnimator="@null"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShareEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Share via Email"
            android:textColor="#FFFFFF"
            android:backgroundTint="#64748B"
            app:cornerRadius="12dp"
            android:textStyle="bold"
            app:icon="@drawable/ic_email"
            app:iconTint="#FFFFFF"
            android:stateListAnimator="@null"/>

    </LinearLayout>
</ScrollView>
