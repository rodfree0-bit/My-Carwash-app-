<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order History"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Search Bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="#1E293B"
        app:boxStrokeColor="#3B82F6"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:startIconTint="#94A3B8"
        app:hintTextColor="#94A3B8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search by ID or address"
            android:textColor="#FFFFFF"
            android:textColorHint="#64748B"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/chip_text_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/chip_text_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/chip_text_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipInProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Progress"
                style="@style/Widget.Material3.Chip.Filter"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/chip_text_selector" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Orders List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹"
            android:textSize="64sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/txtEmptyHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay Ã³rdenes"
            android:textColor="#64748B"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
