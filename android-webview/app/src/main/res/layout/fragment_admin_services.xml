<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services &amp; Pricing"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnManageServices"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Manage Services"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            android:layout_marginBottom="12dp"
            android:textAllCaps="false"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnManageAddons"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Manage Add-ons"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            android:layout_marginBottom="12dp"
            android:textAllCaps="false"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnManageVehicleTypes"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Manage Vehicle Types"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            android:layout_marginBottom="12dp"
            android:textAllCaps="false"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnManageCoupons"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Manage Coupons"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            android:textAllCaps="false"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>
