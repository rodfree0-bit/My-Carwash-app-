<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#1E293B"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:foreground="?attr/selectableItemBackground">

    <!-- Selection Border Overlay -->
    <View
        android:id="@+id/selectionBorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_blue_rounded"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_car"
            android:padding="10dp"
            android:background="@drawable/bg_circle_dark"
            app:tint="#94A3B8"
            android:id="@+id/iconVehicle"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/vehicleModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tesla Model 3"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/vehicleType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sedan"
                    android:textColor="#94A3B8"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/bg_circle_small_divider"
                    android:layout_marginHorizontal="6dp"/>

                <TextView
                    android:id="@+id/vehiclePlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC-1234"
                    android:textColor="#94A3B8"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <RadioButton
            android:id="@+id/vehicleCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#3B82F6"
            android:clickable="false"
            android:focusable="false"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
