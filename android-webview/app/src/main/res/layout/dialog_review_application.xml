<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Info Section -->
        <TextView
            android:id="@+id/tvApplicantInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info..."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attached Documents (6)"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Photos Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Row 1: Identity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/imgProfilePreview"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#EEEEEE"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerCrop"/>
                
                <ImageView
                    android:id="@+id/imgLicensePreview"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#EEEEEE"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/imgSSNPreview"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#EEEEEE"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <!-- Row 2: Vehicle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/imgVehiclePreview"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#EEEEEE"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerCrop"/>
                
                <ImageView
                    android:id="@+id/imgInsurancePreview"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#EEEEEE"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerCrop"/>
                
                <ImageView
                    android:id="@+id/imgRegistrationPreview"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#EEEEEE"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
        </LinearLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe to see all ->"
            android:textSize="12sp"
            android:textColor="#888888"
            android:gravity="end"
            android:layout_marginTop="4dp"/>

    </LinearLayout>
</ScrollView>
