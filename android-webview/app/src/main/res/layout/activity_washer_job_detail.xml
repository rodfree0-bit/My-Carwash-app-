<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to start"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/timerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="03:00"
            android:textColor="#60A5FA"
            android:textSize="48sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Status Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartDriving"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Start Driving"
            android:textColor="#000000"
            android:backgroundTint="#60A5FA"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnArrived"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="I've Arrived"
            android:textColor="#000000"
            android:backgroundTint="#60A5FA"
            android:enabled="false"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartWork"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Start Work"
            android:textColor="#000000"
            android:backgroundTint="#60A5FA"
            android:enabled="false"
            android:layout_marginBottom="24dp"/>

        <!-- Photo Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Before Photos"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/beforePhotoCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0/6"
                android:textColor="#94A3B8"
                android:textSize="16sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTakeBeforePhoto"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Take Photo"
                android:textColor="#000000"
                android:backgroundTint="#60A5FA"
                android:enabled="false"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="After Photos"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/afterPhotoCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0/6"
                android:textColor="#94A3B8"
                android:textSize="16sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTakeAfterPhoto"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Take Photo"
                android:textColor="#000000"
                android:backgroundTint="#60A5FA"
                android:enabled="false"/>
        </LinearLayout>

        <!-- Complete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Complete Job"
            android:textColor="#000000"
            android:backgroundTint="#10B981"
            android:enabled="false"/>

    </LinearLayout>
</ScrollView>
