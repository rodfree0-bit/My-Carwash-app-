<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WASHER PORTAL"
                    android:textColor="#B3FFFFFF"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    android:textStyle="bold" />
                    
                <TextView
                    android:id="@+id/txtWelcomeWasher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Dashboard"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- STATS GRID -->
            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="false">

                <!-- EARNINGS (Wide) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_columnSpan="2"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#1E293B">
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">
                        <TextView
                            android:text="Total Earnings"
                            android:textColor="#B3FFFFFF"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/txtTotalEarnings"
                            android:text="$0.00"
                            android:textColor="@color/white"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                         <TextView
                            android:text="Last 30 Days"
                            android:textColor="#80FFFFFF"
                            android:textSize="12sp" 
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- JOBS COMPLETED -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#1E293B">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/txtJobsCompleted"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:textStyle="bold" />
                        <TextView
                            android:text="Completed"
                            android:textColor="#B3FFFFFF"
                            android:textSize="12sp" 
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- RATING -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#1E293B">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/txtRating"
                            android:text="5.0"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@android:drawable/star_on"
                                app:tint="#F59E0B"/>
                             <TextView
                                android:text=" Rating"
                                android:textColor="#B3FFFFFF"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </androidx.gridlayout.widget.GridLayout>

             <!-- CURRENT JOB CARD -->
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Job"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

             <androidx.cardview.widget.CardView
                android:id="@+id/cardCurrentJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#1E293B"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtJobStatus"
                            android:text="No Active Job"
                            android:textColor="@color/primary_blue"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                             android:id="@+id/txtJobTime"
                            android:text="--:--"
                            android:textColor="#B3FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#1AFFFFFF" android:layout_marginTop="12dp" android:layout_marginBottom="12dp"/>
                    
                    <TextView
                         android:id="@+id/txtJobAddress"
                        android:text="Wait for dispatch..."
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewJob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Details"
                        android:backgroundTint="@color/primary_blue"
                        app:cornerRadius="8dp"
                        android:layout_marginTop="16dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- UPCOMING JOBS TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming Jobs"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"/>

            <!-- UPCOMING JOBS LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUpcomingJobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
