<?xml version="1.0" encoding="utf-8"?>
<!-- Premium Glassmorphism - Exact Web Replica -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base Glass Surface (5% white like web's bg-white/5) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0DFFFFFF"/> <!-- 5% white -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- Frosted Overlay (simulates backdrop-blur) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66000000"/> <!-- 40% black for depth -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- Gradient Sheen (top-left light reflection) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#1AFFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- Border (10% white like web's border-white/10) -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#1AFFFFFF"/> <!-- 10% white -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
</layer-list>
